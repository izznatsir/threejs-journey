{
	"private": true,
	"scripts": {
		"fmt": "prettier --ignore-path .gitignore --ignore-path .prettierignore --ignore-unknown --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4",
		"typescript": "^5.4.3"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-organize-imports"
		],
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
	},
	"lint-staged": {
		"*": [
			"prettier --ignore-path .gitignore --ignore-path .prettierignore --ignore-unknown"
		]
	}
}
